---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---
<div class="link-card">
	<h2>
		{title}
		<span></span>
	</h2>
	<img src={href} class="image-card"/>
	<p>
		{body}
		Caras que cambiam cada que se recarga la pagina
	</p>
</div>

<style>
	.link-card {
		list-style: none;
		display: flex;
		flex-direction: column;
		padding: 20px;
		width: 50%;
		margin: auto;
		align-items: center;
		background-color: floralwhite;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	.image-card{
		width: 50%;
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0,0,0.58,1);
	}

	p {
		margin-bottom: 0;
		border-top: 1px solid black;
		padding-top: 25px;
		width: 90%;
		font-style: italic;
   	 	word-spacing: 5px;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	}
</style>
